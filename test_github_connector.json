{
  "name": "github-repos-connector",
  "specType": "openapi",
  "spec": {
    "openapi": "3.0.0",
    "info": {
      "title": "GitHub Repositories API",
      "version": "2024-01-01"
    },
    "servers": [{"url": "https://api.github.com"}],
    "paths": {
      "/user/repos": {
        "get": {
          "summary": "List repositories for authenticated user",
          "operationId": "listUserRepos",
          "parameters": [
            {
              "name": "sort",
              "in": "query",
              "schema": {"type": "string", "enum": ["created", "updated", "pushed", "full_name"]}
            },
            {
              "name": "per_page",
              "in": "query",
              "schema": {"type": "integer", "default": 30}
            }
          ],
          "responses": {
            "200": {
              "description": "List of repositories"
            }
          }
        },
        "post": {
          "summary": "Create a repository",
          "operationId": "createRepo",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "description": {"type": "string"},
                    "private": {"type": "boolean"}
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Repository created"
            }
          }
        }
      },
      "/repos/{owner}/{repo}": {
        "get": {
          "summary": "Get a repository",
          "operationId": "getRepo",
          "parameters": [
            {"name": "owner", "in": "path", "required": true, "schema": {"type": "string"}},
            {"name": "repo", "in": "path", "required": true, "schema": {"type": "string"}}
          ],
          "responses": {
            "200": {
              "description": "Repository details"
            }
          }
        }
      },
      "/repos/{owner}/{repo}/issues": {
        "get": {
          "summary": "List repository issues",
          "operationId": "listIssues",
          "parameters": [
            {"name": "owner", "in": "path", "required": true, "schema": {"type": "string"}},
            {"name": "repo", "in": "path", "required": true, "schema": {"type": "string"}},
            {"name": "state", "in": "query", "schema": {"type": "string", "enum": ["open", "closed", "all"]}}
          ],
          "responses": {
            "200": {
              "description": "List of issues"
            }
          }
        },
        "post": {
          "summary": "Create an issue",
          "operationId": "createIssue",
          "parameters": [
            {"name": "owner", "in": "path", "required": true, "schema": {"type": "string"}},
            {"name": "repo", "in": "path", "required": true, "schema": {"type": "string"}}
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {"type": "string"},
                    "body": {"type": "string"},
                    "labels": {"type": "array", "items": {"type": "string"}}
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Issue created"
            }
          }
        }
      }
    }
  },
  "language": "typescript",
  "runtime": "cloudflare-workers",
  "authConfig": {
    "type": "apikey",
    "config": {
      "header": "Authorization",
      "prefix": "Bearer"
    }
  }
}
